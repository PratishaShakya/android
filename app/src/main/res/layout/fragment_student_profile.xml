<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.StudentProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/medium_padding"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user" />

            <ImageView
                android:id="@+id/change_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/profile_pic"
                android:layout_alignBottom="@+id/profile_pic"
                android:layout_marginBottom="@dimen/medium_padding"
                android:src="@drawable/ic_photo_camera" />

            <TextView
                android:id="@+id/my_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/medium_padding"
                android:layout_below="@id/profile_pic"
                android:fontFamily="@font/nunito_semibold"
                android:text="My Details"
                android:textColor="@color/primary_text"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/my_details"
                android:layout_marginTop="@dimen/medium_padding"
                android:orientation="vertical"
                android:padding="@dimen/medium_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Name"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Name"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Address"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Address"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Contact"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Contact"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Email Address"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Email Address"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="DOB"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="DOB"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Qualification"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />


                    <TextView
                        android:id="@+id/qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Qualification"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Complete Year"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/complete_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Complete Year"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Test Attended"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/test_attended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Test Attended"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="About You"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />


                    <TextView
                        android:id="@+id/summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Remarks"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/extra_large_padding"
                    android:textAllCaps="true"
                    fancy:fb_borderColor="@color/colorPrimaryDark"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/colorPrimaryDark"
                    fancy:fb_focusColor="@color/login_btn_color"
                    fancy:fb_radius="@dimen/small_margin"
                    fancy:fb_text="Edit Info"
                    fancy:fb_textColor="@color/colorWhite" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_large_padding"
                    fancy:cardBackgroundColor="#77eeeeee"
                    fancy:cardCornerRadius="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/medium_padding">

                        <ImageView
                            android:id="@+id/alert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_alert" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/medium_padding"
                            android:layout_toRightOf="@id/alert"
                            android:text="@string/profile_message"
                            android:textAlignment="center" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/upload_file"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/medium_padding"
        android:layout_marginBottom="@dimen/medium_padding"
        android:background="@drawable/circle_layout"
        android:elevation="3dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-6dp">

            <ImageView
                android:id="@+id/new_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_new_file" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_post"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/small_margin"
                android:text="File"
                android:textColor="#fff" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>