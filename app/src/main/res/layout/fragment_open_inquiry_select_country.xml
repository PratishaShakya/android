<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        tools:context=".Fragment.OpenInquirySelectCountryFragment">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/best_consultancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="@dimen/medium_padding"
                    android:text="We will help you find best consultancy"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/best_consultancy"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bubble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:src="@drawable/ic_internet" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:layout_toRightOf="@id/bubble"
                        android:focusable="true"
                        android:focusedByDefault="true"
                        android:padding="10dp">

                        <AutoCompleteTextView
                            android:id="@+id/country_name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:focusable="true"
                            android:focusedByDefault="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:hint="Enter country name you want to apply for"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@id/enquiry_address"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bubble1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:src="@drawable/ic_books" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/course"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:layout_toRightOf="@id/bubble"
                        android:focusable="true"
                        android:focusedByDefault="true"
                        android:padding="10dp">

                        <AutoCompleteTextView
                            android:id="@+id/course_name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:focusable="true"
                            android:focusedByDefault="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:hint="Enter course name you want to apply for"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@id/enquiry_address"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/linear1"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:textAllCaps="true"
                    fancy:fb_borderColor="@color/blue"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/blue"
                    fancy:fb_focusColor="@color/login_btn_color"
                    fancy:fb_radius="@dimen/small_margin"
                    fancy:fb_text="@string/next"
                    fancy:fb_textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_next">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Why fill this form?"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/extra_large_padding"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:layout_marginRight="@dimen/extra_large_padding"
                            android:layout_marginBottom="@dimen/extra_large_padding">

                            <LinearLayout
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_success" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:text="Easy and Convenient"
                                    android:textAlignment="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_group" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:text="Authorized Consultancies"
                                    android:textAlignment="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_contract" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:text="Curated List Just for You"
                                    android:textAlignment="center" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>